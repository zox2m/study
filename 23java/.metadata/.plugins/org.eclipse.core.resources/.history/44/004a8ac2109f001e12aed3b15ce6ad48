import java.awt.*;

import javax.swing.*;

public class TenButtonFrame extends JFrame{

	public TenButtonFrame() {
		//1 set title 
		setTitle("Button Frame");
		// EXIT
		Container c = this.rootPane;
		
		//3 
		//Container c = getComponent()
		//Container c = new Container();
		//Container c = new Container();
		
		c.add(new JButton("1"));
		c.add(new JButton("2"));
		c.add(new JButton("3"));
		c.add(new JButton("4"));
		c.add(new JButton("5"));
		c.add(new JButton("6"));
		c.add(new JButton("7"));
		c.add(new JButton("8"));
		c.add(new JButton("9"));
		c.add(new JButton("10"));
		
		//4 ·¹ÀÌ¾Æ¿ô )
		c.setLayout(new GridLayout(LEFT,0,0));
		// set size 
		setSize(300,300);
		setVisible(true);
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new TenButtonFrame();
	}

}
